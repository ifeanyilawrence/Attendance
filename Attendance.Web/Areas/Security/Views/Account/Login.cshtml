        //        "hideMethod": "fadeOut",
        //        "tapToDismiss": false
        //    }

        //    var $toast = toastr["success"](msg, title);
        //}
        function toastMessage(msg, title, messagetype) {

            toastr.options = {
                "closeButton": false,
                "debug": false,
                "newestOnTop": true,
                "progressBar": true,
                "positionClass": "toast-top-right",
                "preventDuplicates": false,
                "onclick": null,
                "showDuration": "300",
                "hideDuration": "1000",
                "timeOut": "5000",
                "extendedTimeOut": "1000",
                "showEasing": "swing",
                "hideEasing": "linear",
                "showMethod": "fadeIn",
                "hideMethod": "fadeOut",
                "tapToDismiss": false
            }

            var $toast = toastr[messagetype](msg, title);
        }
    </script>
