@model Attendance.Web.Areas.Admin.Models.MenuViewModel
@{
    ViewBag.Title = "DeleteMenuInRole";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}



<div class="col-md-12">
    @if (TempData["Message"] != null)
    {

        @Html.Partial("_Message", (Attendance.Model.Model.Message)TempData["Message"])
    }


    <div class="panel panel-default">
        <div class="panel-heading">
            <h4 class="panel-title">Delete Menu</h4>
        </div>

            @using (Html.BeginForm("DeleteMenuInRole", "Menu", new { Area = "Admin" }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                <div class="panel panel-default">
                    <div class="panel-body">
                        @Html.HiddenFor(m => m.MenuInRole.Menu_In_Role_Id)

                        <div>
                            <h3>Are you sure you want to delete this menu?</h3>
                            <hr />
                            <dl class="dl-horizontal">
                                <dt>
                                    @Html.DisplayName("Display Name:")
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.MenuInRole.MENU.Display_Name)
                                </dd>
                                <br/>

                                <dt>
                                    @Html.DisplayName("Menu Group:")
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.MenuInRole.MENU.MENU_GROUP.Name)
                                </dd>
                                <br />

                                <dt>
                                    @Html.DisplayName("Role:")
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.MenuInRole.ROLE.Name)
                                </dd>
                                
                                <br />

                                <dt>
                                    @Html.DisplayName("Activated:")
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.MenuInRole.Activated)
                                </dd>

                            </dl>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-3 col-md-9">
                                <input type="submit" value="Yes" class="btn btn-success" />   |
                                @Html.ActionLink("Cancel", "ViewMenuInRole", "Menu", new { @class = "btn btn-success" })
                            </div>
                        </div>
                    </div>

                    </div>
            }

        </div>

    </div>